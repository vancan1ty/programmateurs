<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.programmateurs"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cashmoney_icon"
        android:label="Cash Money Pro"
        android:theme="@style/AppTheme" >
        <activity
            android:name="programmateurs.views.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="programmateurs.views.CheckInActivity"
            android:label="Check In Activity"
            android:parentActivityName="programmateurs.views.LoginActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.cerq.android_client.views.MainActivity" />
        </activity>
        <activity
            android:name="programmateurs.views.QuipBrowser"
            android:label="Cerq"
            android:parentActivityName="programmateurs.views.CheckInActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="programmateurs.views.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="programmateurs.views.SettingsActivity2"
            android:label="@string/title_activity_settings_activity2"
            android:parentActivityName="programmateurs.views.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="programmateurs.views.HomeActivity" />
        </activity>
        <activity
            android:name="programmateurs.views.AddUserActivity"
            android:label="@string/title_activity_add_user"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="programmateurs.views.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="programmateurs.views.TransactionScreen"
            android:label="@string/title_activity_deposit" 
	        android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
        <activity
            android:name="programmateurs.views.AdminActivity"
            android:label="@string/title_activity_admin" >
        </activity>
        <activity
            android:name="programmateurs.views.NewAccountActivity"
            android:label="New Account">
        </activity>
        <activity
            android:name="programmateurs.views.TransactionHistoryFragment"
            android:label="@string/title_activity_transaction_history_fragment" >
        </activity>
        <activity
            android:name="programmateurs.views.AccountDetailActivity"
            android:label="@string/title_activity_account_detail"
            android:parentActivityName="programmateurs.views.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="programmateurs.views.HomeActivity" />
        </activity>
    </application>

</manifest>
